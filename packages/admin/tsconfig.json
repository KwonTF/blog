{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    //Use ES2019 for Webpack Version 4
    "target": "es6",
    "lib": ["ES2020", "DOM"],
    "noImplicitThis": false,
    "incremental": true,
    "strict": false,
    "paths": {
      "@blog/admin/*": ["packages/admin/*"],
      "@blog/shared/*": ["packages/shared/*"]
    }
  },
  "include": ["src/**/*.ts"]
}
